<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MyActivity"

    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background">
    </ImageView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_camera"
            android:contentDescription="@string/image_cd_camera"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_camera"
            android:text="@string/button_camera"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginBottom="225dp"
            android:background="#010223"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />


        <Button
            android:id="@+id/button_input"
            android:text="@string/button_input"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="#010223"
            android:layout_marginTop="43dp"
            android:layout_alignTop="@+id/button_camera"
            android:layout_alignLeft="@+id/button_camera"
            android:layout_alignStart="@+id/button_camera"
            android:onClick="inputValues"/>
    </RelativeLayout>


</FrameLayout>
